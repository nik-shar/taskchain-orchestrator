# Copy this file to .env and fill in real values.
# Do not commit your .env.
#
#   cp .env.example .env

# Required: PostgreSQL storage URL
ORCHESTRATOR_DATABASE_URL=postgresql://orchestrator:orchestrator@127.0.0.1:5432/orchestrator_db

# Planner/executor mode: deterministic | llm
ORCHESTRATOR_PLANNER_MODE=deterministic
ORCHESTRATOR_EXECUTOR_MODE=deterministic

# Runtime timeouts/retries
ORCHESTRATOR_PLANNER_TIMEOUT_S=8.0
ORCHESTRATOR_EXECUTOR_LLM_TIMEOUT_S=8.0
ORCHESTRATOR_TOOL_TIMEOUT_S=2.0
ORCHESTRATOR_TOOL_MAX_RETRIES=1
ORCHESTRATOR_TOOL_BACKOFF_S=0.05
ORCHESTRATOR_EXECUTOR_FAIL_FAST=0

# Optional LLM settings (required when *_MODE=llm)
ORCHESTRATOR_LLM_PROVIDER=openai
OPENAI_API_KEY=<your-openai-api-key>
ORCHESTRATOR_LLM_MODEL=gpt-4o-mini
ORCHESTRATOR_LLM_BASE_URL=https://api.openai.com/v1
ORCHESTRATOR_LLM_MAX_RETRIES=1
ORCHESTRATOR_LLM_BACKOFF_S=0.2
ORCHESTRATOR_LLM_TRACE=0

# Company tool endpoints and timeouts
COMPANY_JIRA_BASE_URL=http://127.0.0.1:8001
COMPANY_METRICS_BASE_URL=http://127.0.0.1:8002
COMPANY_LOGS_BASE_URL=http://127.0.0.1:8003
ORCHESTRATOR_COMPANY_TOOL_TIMEOUT_S=10.0
MANUAL_TOOL_TIMEOUT_S=10.0

# Retrieval paths and ranking mode
# Leave empty to use repo defaults.
ORCHESTRATOR_COMPANY_SIM_ROOT=
ORCHESTRATOR_RAG_INDEX_PATH=
ORCHESTRATOR_RAG_RERANK_MODE=auto
ORCHESTRATOR_RAG_RERANK_TIMEOUT_S=8.0

# Optional test flags
RUN_POSTGRES_INTEGRATION_TESTS=0
RUN_LIVE_LLM_TESTS=0
